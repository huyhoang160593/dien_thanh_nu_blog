---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";

const mainRouter = [
  { href: "/", label: "Trang chủ" },
  { href: "/blog", label: "Blog" },
  { href: "/about", label: "Thông tin" },
];
---

<header class="mx-12 xl:mx-24 flex justify-between items-center">
  <h2 class="pb-2 pr-2 font-rowdies text-5xl xl:text-6xl text-transparent bg-clip-text bg-gradient-to-l from-violet-500 to-fuchsia-500">
    {SITE_TITLE}
  </h2>
  <nav class="text-xl xl:text-2xl flex gap-2 items-center">
    {
      mainRouter.map((item) => (
        <HeaderLink href={item.href} aria-hidden="true">{item.label}</HeaderLink>
      ))
    }
    <HeaderLink
      href="https://www.facebook.com/profile.php?id=100063695785038"
      target="_blank"
    >
      <div class="i-mingcute-facebook-line"></div>
    </HeaderLink>
    <HeaderLink href="https://github.com/huyhoang160593" target="_blank">
      <div class="i-mingcute-github-line"></div>
    </HeaderLink>
  </nav>
</header>
