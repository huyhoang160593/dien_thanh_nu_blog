---
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'time'> {
	date: Date;
}

const { date, ...props } = Astro.props;
---

<time datetime={date.toISOString()} {...props}>
	{
  date.toLocaleDateString('vi-vn', {
			year: 'numeric',
			month: 'long',
			day: 'numeric',
		})
	}
</time>
